{
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2017", "dom"],
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
